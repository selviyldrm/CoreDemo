@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">

                <img src="~/coreblogtema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>

                </div>
            </div>
        }
    }
    else
    {
        <h4 style="color:darkblue"><i>Henüz Yorum Yok.  İlk Yorumu Sen Yap!</i></h4>
    }

</div>